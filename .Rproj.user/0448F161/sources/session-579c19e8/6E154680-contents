tab_weighted <- read_rds(here::here("report", "regression_results", "weighted.rds"))

## Get the model output first
output <- modelsummary::modelsummary(
  tab_weighted,
  output = "dataframe",  ## Get as dataframe first
  shape = 'cbind',
  estimate = "{estimate}({std.error}){stars}",
  statistic = NULL,
  # coef_map = coef_map,
  coef_omit = "^count_app_year",
  stars = TRUE
) %>%
  mutate(
    group = case_when(
    grepl("^count_", term) ~ "Count Model",
    grepl("^zero_", term)  ~ "Zero-Inflation Model",
    TRUE ~ "GoF"
    ),
    term = str_remove_all(term, "(count_|zero_)"),
    # Rename variables
    term = case_match(
      term,
      "(Intercept)" ~ "Intercept",
      "weighted_authority" ~ "Authority",
      "weighted_hub" ~ "Hub",
      "weighted_betweenness" ~ "Betweenness",
      "weighted_closeness_asymmetry" ~ "Closeness-A",
      "w_cat_in" ~ "Within-Cat-In",
      "b_cat_out" ~ "Between-Cat-Out",
      "entropy_strength_total" ~ "Entropy (Strength)",
      "collabinternational" ~ "International",
      "collabnational" ~ "National",
      "weighted_authority × collabinternational" ~ "Authority x Inter",
      "weighted_authority × collabnational" ~ "Authority x Nat",
      "collabinternational × weighted_hub" ~ "Hub x Inter",
      "collabnational × weighted_hub" ~ "Hub x Nat",
      "collabinternational × weighted_betweenness" ~ "Betweenness x Inter",
      "collabnational × weighted_betweenness" ~ "Betweenness x Nat",
      "collabinternational × weighted_closeness_asymmetry" ~ "Closeness-A x Inter",
      "collabnational × weighted_closeness_asymmetry" ~ "Closeness-A x Nat",
      "collabinternational × w_cat_in" ~ "Within-Cat-In x Inter",
      "collabnational × w_cat_in" ~ "Within-Cat-In x Nat",
      "collabinternational × b_cat_out" ~ "Between-Cat-Out x Inter",
      "collabnational × b_cat_out" ~ "Between-Cat-Out x Nat",
      "collabinternational × entropy_strength_total" ~ "Entropy x Inter",
      "collabnational × entropy_strength_total" ~ "Entropy x Nat",
      "renewal_t" ~ "Renewal",
      "tech_diversity" ~ "Tech Diversity",
      "n_categories" ~ "N Categories",
      .default = term  # Keep original if not matched
    )
  ) 


## Step 3: Build gt table
gt_table <- output %>%
  select(-part, -statistic) %>%
  gt(
    rowname_col = "term", groupname_col =  "group", auto_align = T,
